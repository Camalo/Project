{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}

    <div class="container">
        <h2>List of books</h2>
        <div class="row">
        <div class="col-3">
            {% for category in categories %}
                <div><a href="{{ path('show_category',{'category': category.id}) }}"> {{ category.title }} </a></div>
                <div class="w-100">
                </div>
            {% endfor %}
        </div>

        <div class="col-9">
        {% for book in books %}
        <div style="box-shadow: 2px 3px 20px 4px rgba(20,10,30,0.1); background-color: #F0FFF0">

            <div class="row" style="height: 150px; padding: 20px ">
                <div class="col-2 text-center">
                    <img src="{{ book.picture }}" alt="book picture" width="120" height="120" />
                </div>
                <div class="col-7">
                    <p style="font-size: 20px">{{ book.title }} </p>
                    <div>By {{ book.author }} </div>
                    <div><a href="{{ path('show_book',{'book': book.id}) }}">подробнее</a></div>
                </div>
            </div>
        </div>

        {% endfor %}
        </div>
        </div>


{% endblock %}
